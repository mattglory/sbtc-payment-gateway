{
  "name": "sbtc-payment-gateway-backend",
  "version": "1.0.0",
  "description": "sBTC Payment Gateway Backend API",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "echo 'No build required'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --verbose",
    "test:unit": "jest tests/unit --coverage",
    "test:integration": "jest tests/integration --coverage",
    "test:ci": "jest --coverage --ci --watchAll=false --testResultsProcessor=jest-junit",
    "test:debug": "jest --runInBand --detectOpenHandles --verbose",
    "test:silent": "jest --silent",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix"
  },
  "dependencies": {
    "@stacks/blockchain-api-client": "^8.12.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "uuid": "^9.0.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "bitcoin",
    "stacks",
    "sbtc",
    "payment-gateway",
    "api",
    "blockchain"
  ],
  "author": "Matt Glory <mattglory14@gmail.com>",
  "license": "MIT"
}
