{
  "name": "sbtc-payment-gateway-backend",
  "version": "1.0.0",
  "description": "sBTC Payment Gateway Backend API",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "echo 'No build step required for Node.js deployment'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --verbose",
    "test:unit": "jest tests/unit --coverage",
    "test:integration": "jest tests/integration --coverage",
    "test:e2e": "node tests/test-runner.js",
    "test:quick": "node test-integration.js",
    "test:ci": "jest --coverage --ci --watchAll=false --testResultsProcessor=jest-junit",
    "test:debug": "jest --runInBand --detectOpenHandles --verbose",
    "test:silent": "jest --silent",
    "db:init": "node database/init.js",
    "db:reset": "node database/reset.js",
    "db:migrate:prod": "psql $DATABASE_URL -f database/schema.production.sql",
    "db:backup": "pg_dump $DATABASE_URL > backup-$(date +%Y%m%d-%H%M%S).sql",
    "logs:prod": "railway logs --tail",
    "deploy:railway": "railway up",
    "health:check": "curl $RAILWAY_STATIC_URL/health || curl http://localhost:$PORT/health",
    "metrics": "curl $RAILWAY_STATIC_URL/metrics || curl http://localhost:$PORT/metrics",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "postinstall": "echo 'sBTC Payment Gateway installed successfully'"
  },
  "dependencies": {
    "@stacks/blockchain-api-client": "^8.12.1",
    "@stacks/network": "^6.15.0",
    "@stacks/transactions": "^6.15.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "pg": "^8.11.3",
    "pg-pool": "^3.6.2",
    "sqlite3": "^5.1.7",
    "uuid": "^9.0.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "bitcoin",
    "stacks",
    "sbtc",
    "payment-gateway",
    "api",
    "blockchain"
  ],
  "author": "Matt Glory <mattglory14@gmail.com>",
  "license": "MIT"
}
