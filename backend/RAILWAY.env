# Railway Production Environment Configuration
# Set these variables in Railway Dashboard â†’ Variables

# Application Configuration
NODE_ENV=production
APP_VERSION=1.0.0
LOG_LEVEL=info

# Database (auto-provided by Railway)
# DATABASE_URL will be automatically provided by Railway PostgreSQL service

# API Configuration for Railway
DEMO_MODE=true
API_KEYS=pk_railway_health,pk_prod_railway,pk_test_demo,pk_test_your_key,pk_test_123
JWT_SECRET=railway_jwt_secret_change_me_in_production

# Stacks Configuration
STACKS_NETWORK=mainnet
CONTRACT_ADDRESS=SP1HTBVD3JG9C05J7HBJTHGR0GGW7KXW28M5JS8QE
DEPLOYER_PRIVATE_KEY=your_mainnet_private_key_here

# CORS Configuration (update with your frontend domain)
CORS_ORIGINS=https://your-frontend.railway.app,https://your-domain.com

# Rate Limiting (Production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50

# Bitcoin Configuration (Production)
BITCOIN_NETWORK=mainnet
BITCOIN_CONFIRMATIONS=6
BITCOIN_MONITORING_INTERVAL=120000
BITCOIN_POLL_LIMIT=50
BITCOIN_ADDRESS_SEED=your_secure_production_seed

# Monitoring
ENABLE_MONITORING=true
WEBHOOK_ENDPOINTS=https://your-webhook.com/payments

# Security (Production)
DEBUG=false
ENABLE_API_DOCS=false
ENABLE_TEST_ENDPOINTS=false

# Railway will automatically provide:
# RAILWAY_ENVIRONMENT
# RAILWAY_PROJECT_NAME 
# RAILWAY_SERVICE_NAME