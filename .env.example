# sBTC Payment Gateway - Environment Configuration
# Copy this file to .env and update with your values

# Application Environment
NODE_ENV=development

# Server Configuration
PORT=3001
HOST=localhost

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# Stacks Blockchain Configuration
STACKS_NETWORK=testnet
STACKS_API_URL=https://stacks-node-api.testnet.stacks.co
CONTRACT_ADDRESS=ST1PQHQKV0RJXZFY1DGX8MNSNYVE3VGZJSRTPGZGM
CONTRACT_NAME=sbtc-payment-gateway

# Database Configuration (for future use)
# DATABASE_URL=postgresql://user:password@localhost:5432/sbtc_gateway
# REDIS_URL=redis://localhost:6379

# Security
# JWT_SECRET=your-super-secret-jwt-key
# API_SECRET=your-api-secret-key
# ENCRYPTION_KEY=your-encryption-key

# Payment Configuration  
DEFAULT_FEE_PERCENTAGE=0.025
PAYMENT_TIMEOUT_HOURS=24
MAX_PAYMENT_AMOUNT=1000000000

# External Services
# SENDGRID_API_KEY=your-sendgrid-key
# WEBHOOK_SECRET=your-webhook-secret

# Monitoring & Logging
LOG_LEVEL=info
# SENTRY_DSN=your-sentry-dsn

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100