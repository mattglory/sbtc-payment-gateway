{
  "build": {
    "builder": "nixpacks"
  },
  "deploy": {
    "startCommand": "npm run start --workspace=backend",
    "healthcheckPath": "/health",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  },
  "environment": {
    "DEMO_MODE": "true",
    "NODE_ENV": "production"
  }
}
